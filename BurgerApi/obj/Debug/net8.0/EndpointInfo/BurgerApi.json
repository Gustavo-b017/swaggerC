  "paths": {
    "/api/Burgers": {
      "get": {
        "tags": [
          "Burgers"
        ],
        "summary": "Lista todos os burgers (com toppings e preço calculado).",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BurgerDto"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Burgers"
        ],
        "summary": "Cria um novo burger (pode incluir toppings iniciais).",
        "description": "Exemplo:\r\n\r\n```json\r\n{ \"name\": \"Duplo\", \"basePrice\": 15.00, \"toppingIds\": [1,2] }\r\n```",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBurgerDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBurgerDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateBurgerDto"
              }
